---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getContent } from '@/lib/i18n';

const lang = 'fr';
const content = getContent(lang);
const currentPath = '/fr/mentions-legales';
const pageContent = content.legalNotice;
---

<BaseLayout
  lang={lang}
  title={pageContent.meta.title}
  description={pageContent.meta.description}
  currentPath={currentPath}
>
  <article class="container max-w-4xl py-16">
    <h1 class="text-4xl font-bold tracking-tight text-foreground mb-8">
      {pageContent.title}
    </h1>
    <div class="prose prose-neutral dark:prose-invert max-w-none">
      <div class="whitespace-pre-wrap text-foreground">{pageContent.content}</div>
    </div>
  </article>
</BaseLayout>
