---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { HomeHero } from '@/components/HomeHero';
import { HomeHowItWorks } from '@/components/HomeHowItWorks';
import { HomeFAQ } from '@/components/HomeFAQ';
import { HomeCTA } from '@/components/HomeCTA';
import { getContent } from '@/lib/i18n';

const lang = 'en';
const content = getContent(lang);
const currentPath = '/';
---

<BaseLayout
  lang={lang}
  title={content.home.meta.title}
  description={content.home.meta.description}
  currentPath={currentPath}
>
  <HomeHero
    title={content.home.hero.title}
    subtitle={content.home.hero.subtitle}
    cta={content.home.hero.cta}
    client:load
  />

  <HomeHowItWorks
    title={content.home.howItWorks.title}
    anchor={content.home.howItWorks.anchor}
    steps={content.home.howItWorks.steps}
    client:load
  />

  <HomeFAQ
    title={content.home.faq.title}
    anchor={content.home.faq.anchor}
    items={content.home.faq.items}
    client:load
  />

  <HomeCTA
    title="Ready to Get Started?"
    subtitle="Create quality SEO content today"
    cta={content.home.hero.cta}
    client:load
  />
</BaseLayout>
